<form method="post">
    <label>Enter the Title of the movie:</label>
    <input type="text" name="title" maxlength="50" required/>
    <br>
    <label>Select a Genre of the movie:</label>
    <select  name="category">
        <option value="0">Drama</option>
        <option value="1">Action</option>
        <option value="2">Horror</option>
        <option value="3">Romance</option>
        <option value="4">Comedy</option>
    </select>
    <br>
    <label>Enter the Date of the movie:</label>
    <input type="date" name="year" min="1880-01-01" max="2021-02-22"/>
    <br>
    <label>Enter the Actors of the movie:</label>
    <input type="text" name="actors"/>
    <br>
    <label>Enter the Directors of the movie:</label>
    <input type="text" name="directors" />
    <br>
    <input type="submit" value="Register Movie" />
</form>